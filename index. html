            gap: 10px;
            margin-top: 60px;
        }

        #itemName {
            font-size: 0.8em;
        }

        #resultVideo {
            width: 150px;
            height: 150px;
            margin-top: 50px;
            z-index: 9999;
        }

        #retryButton {
            padding: 10px 20px;
            margin-top: 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 0.6em;
            display: none;
        }

        #retryButton:hover {
            background-color: #45a049;
        }

        #volumeInstructions {
            position: absolute;
            bottom: 120px;
            color: white;
